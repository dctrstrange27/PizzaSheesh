<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragment_home"
    android:gravity="center">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/fredoka_one"
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PizzaSheesh"
                    android:textAlignment="center"
                    android:textColor="@color/third_primary"
                    android:textSize="30dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/sapiens"
                    />

                <TextView
                    android:paddingVertical="20dp"
                    android:id="@+id/desc"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_light"
                    android:lineSpacingExtra="2sp"
                    android:paddingHorizontal="29dp"
                    android:paddingTop="5dp"
                    android:text="    Satisfy your pizza cravings you have through this pizza app delivery! Order anytime and anywhere! Your faraway cravings satisifed with Pizza Sheesh Order anytime and anywhere! Deals and promotion. Whenever you crave for."
                    android:textColor="#3B3C3C"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/toProducts"
                    android:textAlignment="center"
                    android:layout_marginVertical="20dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:layout_width="200dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="35dp"
                    android:drawableRight="@drawable/cart_svgrepo_com"
                    android:background="@drawable/order_now"
                    android:textColor="@color/second_primary"
                    android:text="ORDER NOW"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>