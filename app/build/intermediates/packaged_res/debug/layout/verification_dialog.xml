<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_box"
        >
        <ImageButton
            android:layout_gravity="end"
            android:id="@+id/closeV"
            android:src="@drawable/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="We've send a code to your email account!"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/clickEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="dctrrohan@mail.com"
            android:textColor="#427FCA" />
        <EditText
            android:padding="10dp"
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter code"
            android:drawableLeft="@drawable/code"
            android:backgroundTint="@color/trans"
            android:drawablePadding="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal">
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:paddingEnd="10dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't received a code? Check email if Existing"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal">

<!--        <TextView-->
<!--            android:id="@+id/resend"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginRight="2dp"-->
<!--            android:drawablePadding="2dp"-->
<!--            android:paddingStart="10dp"-->
<!--            android:paddingTop="9dp"-->
<!--            android:textColor="#3C96F6"-->
<!--            android:textSize="14sp" />-->
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:id="@+id/resend"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#3C96F6"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
    <Button
        android:layout_gravity="bottom"
        android:id="@+id/no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="verify"
        app:cornerRadius="0dp" />
</LinearLayout>