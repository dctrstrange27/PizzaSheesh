<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.Home">
            <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragmentContainer"
                />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:src="@drawable/left" />
        <TextView
            android:id="@+id/fragmentLabel"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:text="label here"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70" />
            <ImageView
                android:id="@+id/cartIcons"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:src="@drawable/cart_svgrepo_com" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/nav_bg"
        android:gravity="center"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="1dp"
                android:clickable="true"
                android:src="@drawable/home_i" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/productsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="1dp"
                android:src="@drawable/products" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ordersIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="1dp"
                android:src="@drawable/orders" />
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/meIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="1dp"
                android:src="@drawable/person" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>