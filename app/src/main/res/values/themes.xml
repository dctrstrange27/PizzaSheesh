<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhilipRiceDealership" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="primary_button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="order_button">

        <item name="cornerRadius">10dp</item>
    </style>

    <style name="checkout_button">
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="viewItem">

        <item name="backgroundTint">@color/teal_700</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="diagAnim">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
</resources>