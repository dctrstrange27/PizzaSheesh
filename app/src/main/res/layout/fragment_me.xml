<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.Home">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingTop="50dp"
        android:paddingBottom="60dp"
        >
        <!--        profile-->

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display Photo"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
                android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            app:cardCornerRadius="200dp">

            <ImageView

                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_image" />
        </androidx.cardview.widget.CardView>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="200dp"
                android:layout_margin="15dp"
                >
                <TextView
                    android:id="@+id/staticUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/person"
                    android:fontFamily="@font/pacifico"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="dctrrohan@gmail.com"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="200dp"
                android:layout_margin="15dp"
                >

                <TextView
                    android:id="@+id/staticemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="dctrrohan@gmail.com"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="#000"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="200dp"
                android:layout_margin="15dp"
                >
                <EditText
                    android:padding="10dp"
                    android:background="@drawable/sign_box"
                    android:id="@+id/usernameeditable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:textSize="12dp"
                    app:textInputLayoutFocusedRectEnabled="false"
                    android:hint="username"
                    android:drawableStart="@drawable/person_signup"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="200dp"
                android:layout_margin="15dp"
                >
                <EditText
                    android:padding="10dp"
                    android:background="@drawable/sign_box"
                    android:id="@+id/passwordeditable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:textSize="12dp"
                    app:textInputLayoutFocusedRectEnabled="false"
                    android:hint="password"
                    android:drawableLeft="@drawable/password"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="200dp"
                android:layout_margin="15dp"
                >
                <EditText
                    android:padding="10dp"
                    android:background="@drawable/sign_box"
                    android:id="@+id/passwordconfirmeditable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:textSize="12dp"
                    app:textInputLayoutFocusedRectEnabled="false"
                    android:hint="confirm password"
                    android:drawableLeft="@drawable/con_pass"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="200dp"
                android:layout_margin="15dp">
                <EditText
                    android:drawableLeft="@drawable/address_icon"
                    android:padding="10dp"
                    android:background="@drawable/sign_box"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:textSize="12dp"
                    app:textInputLayoutFocusedRectEnabled="false"
                    android:hint="address"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="200dp"
                android:gravity="center"
                >
                <Button
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/savebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="save changes"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    app:cornerRadius="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/sw"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create New Account"
                    android:textColor="#419CED"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Log out"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>